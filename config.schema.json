{
	"pluginAlias": "homebridge-platform-wiser",
	"pluginType": "platform",
	"singular": false,
	"schema": {
		"type": "object",
		"properties": {
			"name": {
				"title": "Name",
				"type": "string",
				"required": true
			},
			"wiserAddress": {
				"title": "Wiser IP Address",
				"type": "string",
				"format": "ipv4",
				"required": true
			},
			"wiserUsername": {
				"title": "Wiser admin user name",
				"type": "string",
				"default": "admin",
				"required": true
			},
			"wiserPassword": {
				"title": "Wiser admin password",
				"type": "string",
				"required": true
			},
			"wiserPort": {
				"title": "Wiser admin password",
				"type": "integer",
				"default": 8888,
				"required": true
			},
			"ignoredGAs": {
				"title": "Ignored groups",
				"type": "array",
				"items": {
					"title": "Group address",
					"type": "object",
					"properties": {
						"network": {
							"title": "Network",
							"type": "integer",
							"required": true,
							"default": 254,
							"maximum":255
						},
						"ga": {
							"title": "Group address",
							"type": "integer",
							"required": true,
							"maximum":255,
							"default": 0
						}
					}
				}
			}
		}
	},
	"form": null,
	"display": null
}